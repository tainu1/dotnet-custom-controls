<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfCustomControlLibrary1.Controls">
    <Style TargetType="local:DigitalClock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DigitalClock">
                    <Grid Background="#FFE5E5E5">

                        <TextBlock x:Name="Date" HorizontalAlignment="Center" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="386" TextAlignment="Center" Margin="0,18,0,0" FontFamily="Meiryo"><Run Language="ja-jp" Text="日付"/></TextBlock>
                        <TextBlock x:Name="Time" HorizontalAlignment="Center" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="386" TextAlignment="Center" Margin="0,63,0,0" FontFamily="Meiryo"><Run Language="ja-jp" Text="時刻"/></TextBlock>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>